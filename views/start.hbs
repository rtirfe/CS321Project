<h1>Start APRS Requests</h1>
<div style="color:red" id="error"></div>
<form action="#">
  <div class="form-group">
    <label for="name">Name of APRS object:</label>
    <input type="text" class="form-control" id="name" required>
  </div>
  <div class="form-group">
    <label for="time">Time between requests in seconds:</label>
    <input type="Number" class="form-control" id="time" required min="30">
  </div>
  <button type="button" class="btn btn-default" id="start-aprs">Start</button>
</form>

<script>
  $(() =>{
    $(document).on('click', '#start-aprs', ()=>{
      let name = $('#name').val();
      let time = $('#time').val();

      if(!name || !time){
        return;
      }

      if(time < 60){
        $('#error').text("Time must >= 60 seconds")
        return;
      }

      $.post('/start', {name: name, time: time}).done(() =>{
        window.location.href = "/map"
      })
    });
  });

</script>